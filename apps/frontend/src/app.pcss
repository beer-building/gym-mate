:root {
	font-size: 14px;
	font-family:
		'Inter',
		system-ui,
		-apple-system,
		BlinkMacSystemFont,
		'Segoe UI',
		Roboto,
		Oxygen,
		Ubuntu,
		Cantarell,
		'Open Sans',
		'Helvetica Neue',
		sans-serif;
}

body {
	margin: 0;
	background: var(--color-background);
	color: var(--color-text);
	min-height: 100vh;
}

button,
input {
	font-family: inherit;
}

h1,
h2,
h3,
h4,
h5,
h6 {
	margin: 0;
	color: var(--color-title);
}
